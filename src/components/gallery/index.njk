<section class="gallery">
  <h2 class="visually-hidden">{{ heading }}</h2>

  <ul class="gallery__list">
    {% for item in list %}
      {% set innerHTML %}
      {% endset %}

      <li style="grid-area: {{ item.area }}">
        <a class="gallery__link" href="{{ item.href }}">
          {% with item %}{% include "components/picture/index.njk" %}{% endwith %}

          {% if item.title %}
            <p class="gallery__title">{{ item.title }}</p>
          {% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
